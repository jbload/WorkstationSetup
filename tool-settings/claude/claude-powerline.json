{
  "theme": "tokyo-night",
  "display": {
    "padding": 1,
    "style": "powerline",
    "charset": "unicode",
    "colorCompatibility": "auto",
    "autoWrap": true,
    "lines": [
      {
        "segments": {
          "directory": {
            "enabled": true,
            "style": "full"
          },
          "git": {
            "enabled": true,
            "showWorkingTree": true,
            "showOperation": true
          },
          "model": {
            "enabled": true
          },
          "context": {
            "enabled": true,
            "showPercentageOnly": true
          },
          "today": {
            "enabled": true,
            "type": "both"
          }
        }
      }
    ]
  }
}
